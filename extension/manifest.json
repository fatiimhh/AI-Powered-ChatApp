{
  "manifest_version": 3,
  "name": "Rome Co-Pilot",
  "version": "1.0",
  "description": "Your workflow AI co-pilot anywhere in Chrome",
  "action": {
    "default_popup": "popup.html"
    
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
